{
  "name": "valiant-picks",
  "version": "1.0.0",
  "description": "Full-stack virtual sports betting platform with confidence-based wagering for schools and communities",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install && cd ..",
    "setup": "npm run install-all",
    "auto-commit": "node auto-commit.js",
    "auto-commit-daemon": "node auto-commit.js &",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report playwright-report",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit"
  },
  "keywords": [
    "betting",
    "sports",
    "basketball",
    "valiant",
    "virtual-currency",
    "wagering",
    "leaderboard",
    "school-sports",
    "react",
    "express",
    "postgresql",
    "supabase"
  ],
  "author": "Gavin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/valiant-picks.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/valiant-picks/issues"
  },
  "homepage": "https://github.com/yourusername/valiant-picks#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^7.6.0",
    "playwright": "^1.57.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
